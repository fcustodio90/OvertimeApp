<% recent_audit_items.each do |recent_audit_item| %>
  <div class="homepage-block col-md-3">
    <p>
      <%= recent_audit_item.user.full_name %>
    </p>
    <p>
      <span class="pending-details">Week starting:</span><span><%= recent_audit_item.start_date %></span>
    </p>
    <p>
      <span class="pending-details">Confirmed at:</span><span><%= recent_audit_item.end_date || status_label('pending') %></span>
    </p>
    <p>
      <span class="pending-details">Status:</span><span><%= status_label recent_audit_item.status %></span>
    </p>

  </div>
<% end %>
